<Window x:Class="cougarsimulator2000.PlayerNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cougarsimulator2000"
        mc:Ignorable="d"
        Title="PlayerNameDialog" Height="300" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Label Content="Give thy naime, ye noble warriore!" Margin="10"/>
            <TextBox x:Name="tbPlayerName" />
            <Button x:Name="btnDone" Content="OK" Margin="10" Click="btnDone_Click"/>
        </StackPanel>
    </Grid>
</Window>
